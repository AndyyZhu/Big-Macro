// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  createdAt DateTime @default(now())
}

model restauranttypes {
  restaurant_id Int         @id @default(autoincrement())
  name          String
  logo          String
  menuitems     menuitems[]
}

model menuitems {
  item_id         Int               @id @default(autoincrement())
  name            String
  restaurant_id   Int
  restaurant      restauranttypes   @relation(fields: [restaurant_id], references: [restaurant_id])
  nutritionalinfo nutritionalinfo[]
}

model nutritionalinfo {
  info_id             Int       @id @default(autoincrement())
  item_id             Int
  calories            Int
  fat_grams           Float
  sodium_mg        Int
  carbohydrates_grams Int
  fibre_grams         Int
  sugar_grams         Int
  protein_grams       Float
  menuitem            menuitems @relation(fields: [item_id], references: [item_id])
}
